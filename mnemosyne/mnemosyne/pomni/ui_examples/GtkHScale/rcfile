#example rcfile for GtkHScrollbar and GtkHScale

style "MyScrollbar" 
{
    GtkScrollbar::has-backward-stepper = 0
    GtkScrollbar::has-forward-stepper = 0
    GtkRange::slider-width = 40
    GtkRange::trough-border = 4
    GtkRange::trough-side-details = 1
}


style "MyScale"
{
    GtkScale::slider-length = 60
    GtkScale::slider-width = 60
}


widget "*.hscrollbar1" style "MyScrollbar"
widget "*.hscale1" style "MyScale"
