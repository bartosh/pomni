style "input-combobox-entry-arrow"
{
  engine "sapwood"
    {
      image 
        {
          function = ARROW
          state = ACTIVE
          overlay_file = "input_arrow_down.png"
          overlay_stretch = FALSE
        }
      image
        {
          function = ARROW
          state = NORMAL
          overlay_file = "input_arrow_down.png"
          overlay_stretch = FALSE
        }
      image
        {
          function = ARROW
          state    = INSENSITIVE
          overlay_file = "input_arrow_down.png"
          overlay_stretch = FALSE
        }
    }
}

